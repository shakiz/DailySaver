<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sakhawat.expense.tracker">

    <application
        android:name="com.sakhawat.expense.tracker.activities.leaktracker.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.sakhawat.expense.tracker.activities.splash.SplashActivity"
            android:theme="@style/SplashAppTheme"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sakhawat.expense.tracker.activities.dashboard.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.sakhawat.expense.tracker.activities.records.RecordsActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustNothing"/>

        <activity
            android:name="com.sakhawat.expense.tracker.activities.report.RecordsReportActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.sakhawat.expense.tracker.activities.wallet.WalletDetailsActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.sakhawat.expense.tracker.activities.newrecord.AddNewRecordActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.sakhawat.expense.tracker.activities.wallet.AddNewWalletActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustPan" />

    </application>

</manifest>