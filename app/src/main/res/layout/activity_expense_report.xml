<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/md_white_1000"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="0dp"
        app:elevation="0dp"
        android:id="@+id/app_bar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tool_bar"
            android:background="@color/md_white_1000"
            app:navigationIcon="?attr/homeAsUpIndicator"
            style="@style/TextAppearance.Widget.Event.Toolbar.Title"
            app:title="@string/expense_report"
            app:titleTextColor="@color/md_grey_800">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/app_bar"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainLayout"
            android:orientation="vertical">

            <!--arcView for customized view-->
            <com.github.florent37.shapeofview.shapes.ArcView
                android:id="@+id/arcView"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:elevation="4dp"
                app:shape_arc_cropDirection="outside"
                app:shape_arc_height="32dp"
                app:shape_arc_position="bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_gravity="center"
                    android:background="@color/md_white_1000"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/TotalBalanceLayout"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="@color/md_grey_100"
                        app:cardElevation="4dp"
                        android:translationZ="8dp"
                        android:layout_centerHorizontal="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalTXTWallet2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textColor="@color/md_grey_800"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/total_balance"/>

                            <TextView
                                android:id="@+id/TotalBalance"
                                android:layout_below="@id/totalTXTWallet2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:textColor="@color/md_blue_grey_700"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/dummy_total"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/DownwardIcon"
                        android:layout_width="20dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_alignRight="@id/TotalBalanceLayout"
                        android:layout_marginRight="8dp"/>

                    <ImageView
                        android:id="@+id/UpwardIcon"
                        android:layout_width="20dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_alignLeft="@id/TotalRemainingLayout"
                        android:layout_marginLeft="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/TotalRemainingLayout"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="@color/md_grey_100"
                        app:cardElevation="4dp"
                        android:translationZ="8dp"
                        android:layout_centerHorizontal="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalTXTWallet3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:textColor="@color/md_grey_800"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/total_remaining"/>

                            <TextView
                                android:id="@+id/TotalRemaining"
                                android:layout_below="@id/totalTXTWallet3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:textColor="@color/md_green_600"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/dummy_total"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </com.github.florent37.shapeofview.shapes.ArcView>

            <androidx.cardview.widget.CardView
                android:id="@+id/infoLayout"
                android:layout_below="@id/arcView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="-50dp"
                app:cardBackgroundColor="@color/md_white_1000"
                app:cardElevation="4dp"
                android:translationZ="8dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/total"/>

                    <TextView
                        android:id="@+id/TotalCost"
                        android:layout_below="@id/totalTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/md_red_400"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/dummy_total"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_below="@id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                android:translationZ="4dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/md_white_1000"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/Heading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="16sp"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/monthly_expense_chart"/>

                    <TextView
                        android:id="@+id/Heading3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="12sp"
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold"
                        android:paddingLeft="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/yearly_cost_chart"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>