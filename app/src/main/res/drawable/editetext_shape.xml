<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#d6d1d1"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#c9c2c2" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>